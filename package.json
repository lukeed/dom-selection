{
  "name": "dom-selection",
  "amdName": "DOMSelection",
  "version": "0.3.1",
  "description": "A lightweight, cross-browser library for DOM selections and ranges. IE9+",
  "license": "MIT",
  "repository": "lukeed/dom-selection",
  "author": {
    "name": "Luke Edwards",
    "email": "luke@lukeed.com",
    "url": "lukeed.com"
  },
  "main": "dist/dom-selection.js",
  "umd:main": "dist/dom-selection.min.js",
  "module": "dist/dom-selection.es.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "build": "rollup -c",
    "postbuild": "uglifyjs dist/dom-selection.min.js -cmo dist/dom-selection.min.js",
    "test": "xo --env=browser src/*"
  },
  "keywords": [
    "caret",
    "container",
    "DOM",
    "nodes",
    "range",
    "selection"
  ],
  "dependencies": {
    "next-node": "^1.0.3"
  },
  "devDependencies": {
    "rollup": "^0.41.5",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "uglify-js": "^2.8.12",
    "xo": "^0.15.0"
  },
  "xo": {
    "rules": {
      "no-unused-expressions": 1,
      "curly": 0
    }
  }
}
